<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:gravity="center"
                                             android:padding="10dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="16dp">


    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/constaint"
        android:padding="10dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/tv_start_postion"
            android:layout_width="wrap_content"
            android:text="人多偷牛无罪"
            android:layout_height="16dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/tv_dest_postion"
            android:layout_width="wrap_content"
            android:text="孤帆"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="spread_inside"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="9dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="9dp"/>


        <TextView
            android:id="@+id/tv_cargo_explan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试测试"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="58dp"
            android:layout_marginTop="8dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="58dp"/>
        <TextView
            android:text="测试测试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/imageButton2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/imageButton2"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_postion"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/sym_call_incoming"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="7dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="7dp"/>




        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="27dp"
            android:layout_height="17dp"
            app:srcCompat="@drawable/bg_fresh"
            app:layout_constraintLeft_toLeftOf="@+id/imageView2"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginLeft="-1dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/tv_cargo_explan"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="27dp"
            android:layout_height="16dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toTopOf="@+id/tv_cargo_explan"
            app:layout_constraintRight_toLeftOf="@+id/tv_cargo_explan"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="9dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="9dp"/>

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>