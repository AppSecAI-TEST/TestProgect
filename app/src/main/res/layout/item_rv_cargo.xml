<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:gravity="center"
                                             android:padding="5dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="5dp">


    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/constaint"
        android:padding="10dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">




        <TextView
            android:id="@+id/tv_start_point"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/constaint"
            app:layout_constraintStart_toStartOf="@id/constaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试测试"/>

        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="41dp"
            app:layout_constraintTop_toTopOf="@id/constaint"
            app:layout_constraintStart_toEndOf="@id/tv_start_point"
            android:layout_height="18dp"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="9dp"
            app:srcCompat="@drawable/bg_fresh"/>

        <TextView
            android:text="测试测试"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_destpoint"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toTopOf="@id/constaint"
            app:layout_constraintStart_toEndOf="@id/imageButton2"
            tools:layout_constraintLeft_creator="1"/>



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_point"
            app:layout_constraintStart_toStartOf="@id/constaint"
            app:srcCompat="@mipmap/ic_launcher_round"
           />


        <TextView
            android:id="@+id/tv_cargo_explan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人多偷牛无罪"
            app:layout_constraintLeft_toLeftOf="@+id/tv_publish_nickname"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_publish_nickname"/>


        <TextView
            android:id="@+id/tv_publish_nickname"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@id/imageView2"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="9dp"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/constaint"
            app:srcCompat="@android:drawable/sym_call_incoming"/>

        <TextView
            android:id="@+id/tv_dest_postion"
            android:layout_width="39dp"
            android:text="孤帆"
            android:layout_height="21dp"
            app:layout_constraintRight_toRightOf="@+id/imageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>